<p id="notice"><%= notice %></p>

<div class="row" id="listing">
  <div class="col-md-8 col-xs-10">
    <h1>Listing Products</h1>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Image url</th>
          <th>Colour</th>
          <th>Price</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
    <div class="container-fluid">
      <div class="row">
        <% cache(cache_key_for_products) do %>
          <%= render @products %>
        <% end %>
      </tbody>
     </table>
      </div>
     </div>

    <br>

    <%= link_to 'New Product', new_product_path %>
  </div>
</div>

