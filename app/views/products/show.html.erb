<p id="notice"><%= notice %></p>

<div class="col-lg-6 col-md-6 col-xs-12">
  <p>
    <strong>Name:</strong>
    <%= @product.name %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= @product.image_url %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @product.description %>
  </p>

  <p>
    <strong>Colour:</strong>
    <%= @product.colour %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= @product.price %>
  </p>
</div>

<div class="col-lg-6 col-md-6 col-xs-12">
  <div class="container-rating">
    <h5>Good Product:</h5>  
    <p> <%= @product.highest_rating_comment %> </p>  
  </div>  
</div><!-- col -->
<div class="col-lg-6 col-md-6 col-xs-12">
  <div class="container-rating">
    <h5>Bad Product:</h5>
     <p> <%= @product.lowest_rating_comment %> </p> 
  </div>
</div><!-- col -->

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
