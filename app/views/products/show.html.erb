<p id="notice"><%= notice %></p>

<div class="product">
  <div class="col-lg-6 col-md-6 col-xs-12">
    <p>
      <strong>Name:</strong>
      <%= @product.name %>
    </p>

    <p>
      <strong>Image url:</strong>
      <%= @product.image_url %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @product.description %>
    </p>

    <p>
      <strong>Colour:</strong>
      <%= @product.colour %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= @product.price %>
    </p>
  </div>

  <div class="col-lg-6 col-md-6 col-xs-12">
    <% if signed_in? %>  
      <%= render partial: "new_comment" %>
    <% end %> 
  </div>
</div>


<div class="review"> 
  <% if !@product.comments.empty? %>
  <div class="col-lg-4 col-md-4 col-xs-12">
    <h5>Good Comments:</h5>
    <div class="rated" data-score="<%= @product.highest_rating_comment.rating %>"></div>
      <p>"<%= @product.highest_rating_comment.body%>"</p>
    </div>
  </div><!-- col -->



  <div class="col-lg-4 col-md-4 col-xs-12">
    <h5>Bad Comments:</h5> 
    <div class="rated" data-score="<%= @product.lowest_rating_comment.rating %>"></div>  
      <p>"<%= @product.lowest_rating_comment.body%>"</p>         
    </div>
  </div><!-- col -->
 
  <div class="col-lg-4 col-md-4 col-xs-12"> 
    <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
   </div>

  <% end %>
  
  <div class="rating">
    <p><%= render partial: "comments" %></p>
    <p><%= will_paginate @comments %></p>
  </div>

</div><!-- col -->


<div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
